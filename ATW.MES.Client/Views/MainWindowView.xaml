<Window
    x:Class="ATW.MES.Client.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ATW.MES.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="win_Main"
    Title="MainWindowView"
    AllowsTransparency="True"
    WindowState="Maximized"
    WindowStyle="None">

    <!--#region Loaded及Unloaded事件-->

    <hc:Interaction.Triggers>
        <hc:EventTrigger EventName="Loaded">
            <hc:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="{Binding ElementName=win_Main}" />
        </hc:EventTrigger>
        <hc:EventTrigger EventName="Unloaded">
            <hc:InvokeCommandAction Command="{Binding UnloadedCommand}" />
        </hc:EventTrigger>
    </hc:Interaction.Triggers>

    <!--#endregion-->

    <Viewbox Stretch="Fill">
        <Grid
            Name="gd_Main"
            Width="1920"
            Height="1080">

            <!--#region 界面分割-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="275" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="14*" />
            </Grid.RowDefinitions>

            <!--#endregion-->

            <!--#region Logo-->

            <Grid>
                <Image
                    x:Name="img_logo"
                    Margin="20,5,20,0"
                    RenderTransformOrigin="1,1"
                    Source="{Binding ImageFileName_Logo}" />
            </Grid>

            <!--#endregion-->

            <!--#region 标题栏-->

            <Grid
                Grid.Row="0"
                Grid.Column="1"
                Background="#111F31">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Label
                        Height="50"
                        Margin="100,0,0,0"
                        Background="#111F31"
                        BorderBrush="#111F31"
                        Content="{Binding LineName}"
                        FontSize="32"
                        Foreground="White" />
                </Grid>

                <StackPanel
                    Grid.Column="1"
                    Margin="0,20,20,20"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Grid Grid.Column="1" Width="180">
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock Margin="20,0,0,0" Opacity="0.7">
                                <InlineUIContainer>
                                    <Image Source="/Common/Images/最小化.png" />
                                </InlineUIContainer>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding WindowMinimizedCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBlock>
                            <TextBlock Margin="20,0,0,0" Opacity="0.7"><InlineUIContainer>
                                    <Image Source="/Common/Images/最大化.png" />
                                </InlineUIContainer>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding WindowMaximizedCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBlock>
                            <TextBlock Margin="20,0,0,0" Opacity="0.7"><InlineUIContainer>
                                    <Image Source="/Common/Images/退出.png" />
                                </InlineUIContainer>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding WindowCloseCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>

            <!--#endregion-->

            <!--#region 导航栏-->

            <!--#region 背景色-->

            <Border
                Grid.Row="2"
                Margin="8,0,4,10"
                Background="#D8DDE1"
                CornerRadius="5" />

            <!--#endregion-->

            <!--#region 导航-->

            <StackPanel x:Name="sp_Main" Grid.Row="2">

                <!--#region 生产看板-->

                <Expander
                    Name="LevelOne_StateBoard"
                    Margin="12,5,10,0"
                    Background="White">

                    <Expander.Header>
                        <StackPanel
                            Height="45"
                            Margin="23,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Path
                                Width="23"
                                Height="23"
                                Data="M864 64H160a96 96 0 0 0-96 96v576a96 96 0 0 0 96 96h320v64H256a32 32 0 0 0 0 64h512a32 32 0 0 0 0-64h-224v-64h320a96 96 0 0 0 96-96V160a96 96 0 0 0-96-96zM160 128h704a32 32 0 0 1 32 32v448H128V160a32 32 0 0 1 32-32z m736 608a32 32 0 0 1-32 32H160a32 32 0 0 1-32-32v-64h768v64z"
                                Fill="Black"
                                Stretch="Fill" />
                            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    Width="145"
                                    HorizontalAlignment="Left"
                                    FontSize="21"
                                    Text="生产看板" />
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel>
                        <RadioButton
                            x:Name="LevelTwo_LineStateBoard"
                            Margin="0,0,120,0"
                            HorizontalAlignment="Right"
                            Command="{Binding ShowWorkshopPicCommand}"
                            Content="产线状态监控"
                            FontSize="18"
                            Foreground="Black"
                            Style="{StaticResource RadioMiniButtonStyle}" />
                        <RadioButton
                            x:Name="LevelTwo_LineStateBoard1"
                            Margin="0,0,120,0"
                            HorizontalAlignment="Right"
                            Command="{Binding ShowWorkshopPicCommand}"
                            Content="异常信息监控"
                            FontSize="18"
                            Foreground="Black"
                            Style="{StaticResource RadioMiniButtonStyle}" />

                    </StackPanel>
                </Expander>

                <!--#endregion-->

                <!--#region 设备管理-->

                <Expander
                    Name="LevelOne_Equipment"
                    Margin="12,5,10,0"
                    Background="White">

                    <Expander.Header>
                        <StackPanel
                            Height="45"
                            Margin="23,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Path
                                Width="23"
                                Height="23"
                                Data="M864 64H160a96 96 0 0 0-96 96v576a96 96 0 0 0 96 96h320v64H256a32 32 0 0 0 0 64h512a32 32 0 0 0 0-64h-224v-64h320a96 96 0 0 0 96-96V160a96 96 0 0 0-96-96zM160 128h704a32 32 0 0 1 32 32v448H128V160a32 32 0 0 1 32-32z m736 608a32 32 0 0 1-32 32H160a32 32 0 0 1-32-32v-64h768v64z"
                                Fill="Black"
                                Stretch="Fill" />
                            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    Width="145"
                                    HorizontalAlignment="Left"
                                    FontSize="21"
                                    Text="设备管理" />
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <Grid>
                        <Expander
                            Name="LevelTwo_BaseEquipment"
                            Margin="0,5,10,0"
                            Background="{x:Null}">
                            <Expander.Header>
                                <StackPanel
                                    Height="30"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock
                                            Width="145"
                                            HorizontalAlignment="Left"
                                            FontSize="18"
                                            Text="设备基础信息" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel>
                                <RadioButton
                                    x:Name="LevelThree_EquipmentCommunicate"
                                    Margin="0,0,40,0"
                                    HorizontalAlignment="Right"
                                    Command="{Binding NavCommand}"
                                    CommandParameter="{Binding ElementName=LevelThree_EquipmentCommunicate}"
                                    Content="设备通讯信息"
                                    FontSize="18"
                                    Foreground="Black"
                                    Style="{StaticResource RadioMiniButtonStyle}" />
                                <RadioButton
                                    x:Name="LevelThree_Test"
                                    Margin="0,0,40,0"
                                    HorizontalAlignment="Right"
                                    Command="{Binding NavCommand}"
                                    CommandParameter="{Binding ElementName=LevelThree_Test}"
                                    Content="设备通讯测试信息"
                                    FontSize="18"
                                    Foreground="Black"
                                    Style="{StaticResource RadioMiniButtonStyle}" />
                            </StackPanel>
                        </Expander>
                    </Grid>
                </Expander>

                <!--#endregion-->

                <!--#region 设备管理-->

                <Expander
                    Name="LevelOne_System"
                    Margin="12,5,10,0"
                    Background="White">

                    <Expander.Header>
                        <StackPanel
                            Height="45"
                            Margin="23,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Path
                                Width="23"
                                Height="23"
                                Data="M864 64H160a96 96 0 0 0-96 96v576a96 96 0 0 0 96 96h320v64H256a32 32 0 0 0 0 64h512a32 32 0 0 0 0-64h-224v-64h320a96 96 0 0 0 96-96V160a96 96 0 0 0-96-96zM160 128h704a32 32 0 0 1 32 32v448H128V160a32 32 0 0 1 32-32z m736 608a32 32 0 0 1-32 32H160a32 32 0 0 1-32-32v-64h768v64z"
                                Fill="Black"
                                Stretch="Fill" />
                            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    Width="145"
                                    HorizontalAlignment="Left"
                                    FontSize="21"
                                    Text="系统管理" />
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel>
                        <Grid>
                            <Expander
                                Name="LevelTwo_Log"
                                Margin="0,5,10,0"
                                Background="{x:Null}">
                                <Expander.Header>
                                    <StackPanel
                                        Height="30"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                            <TextBlock
                                                Width="145"
                                                HorizontalAlignment="Left"
                                                FontSize="18"
                                                Text="日志管理" />
                                        </StackPanel>
                                    </StackPanel>
                                </Expander.Header>
                                <StackPanel>
                                    <RadioButton
                                        x:Name="LevelThree_UserOperateLog"
                                        Margin="0,0,40,0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding NavCommand}"
                                        CommandParameter="{Binding ElementName=LevelThree_UserOperateLog}"
                                        Content="用户操作日志"
                                        FontSize="18"
                                        Foreground="Black"
                                        Style="{StaticResource RadioMiniButtonStyle}" />

                                </StackPanel>
                            </Expander>


                        </Grid>
                        <Grid>
                            <Expander
                                Name="LevelTwo_BaseData"
                                Margin="0,5,10,0"
                                Background="{x:Null}">
                                <Expander.Header>
                                    <StackPanel
                                        Height="30"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                            <TextBlock
                                                Width="145"
                                                HorizontalAlignment="Left"
                                                FontSize="18"
                                                Text="基础数据" />
                                        </StackPanel>
                                    </StackPanel>
                                </Expander.Header>
                                <StackPanel>
                                    <RadioButton
                                        x:Name="LevelThree_BaseProcess"
                                        Margin="0,0,40,0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding NavCommand}"
                                        CommandParameter="{Binding ElementName=LevelThree_BaseProcess}"
                                        Content="工序数据"
                                        FontSize="18"
                                        Foreground="Black"
                                        Style="{StaticResource RadioMiniButtonStyle}" />

                                    <RadioButton
                                        x:Name="LevelThree_BaseUnit"
                                        Margin="0,0,40,0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding NavCommand}"
                                        CommandParameter="{Binding ElementName=LevelThree_BaseUnit}"
                                        Content="单位信息"
                                        FontSize="18"
                                        Foreground="Black"
                                        Style="{StaticResource RadioMiniButtonStyle}" />
                                    <RadioButton
                                        x:Name="LevelThree_BaseProductType"
                                        Margin="0,0,40,0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding NavCommand}"
                                        CommandParameter="{Binding ElementName=LevelThree_BaseProductType}"
                                        Content="产品类型信息"
                                        FontSize="18"
                                        Foreground="Black"
                                        Style="{StaticResource RadioMiniButtonStyle}" />
                                </StackPanel>
                            </Expander>


                        </Grid>
                    </StackPanel>

                </Expander>

                <!--#endregion-->



            </StackPanel>

            <!--#endregion-->

            <!--#endregion-->

            <!--#region 子控件栏-->

            <Grid
                Name="gd_uc"
                Grid.Row="1"
                Grid.Column="1"
                Width="1620"
                Height="1008"
                Margin="2,5,0,0" />

            <!--#endregion-->

        </Grid>
    </Viewbox>
</Window>
